{
  "name": "proger",
  "version": "0.0.1",
  "description": "An application for managing project",
  "main": "app/index.js",
  "scripts": {
    "start": "concurrently \"yarn start:react\" \"yarn start:electron\"",
    "start:react": "cross-env BROWSER=none react-app-rewired start",
    "start:electron": "wait-on http://localhost:1314 && electron app",
    "build": "yarn build:react-copy && yarn pack:electron",
    "build:react": "react-app-rewired build",
    "build:react-copy": "yarn build:react && yarn copy:electron",
    "pack:electron": "electron-builder",
    "copy:electron": "cp -r ./app/. ./build"
  },
  "repository": "",
  "keywords": [
    "Electron",
    "project",
    "management",
    "react"
  ],
  "author": {
    "name": "Jerry Shen",
    "email": "shenjingwei@medlinker.com"
  },
  "dependencies": {
    "@material-ui/core": "^1.2.2",
    "@material-ui/icons": "^1.1.0",
    "@rematch/core": "^1.0.0-beta.4",
    "axios": "^0.18.0",
    "classnames": "^2.2.6",
    "electron-is-dev": "^0.3.0",
    "electron-store": "^2.0.0",
    "lodash": "^4.17.10",
    "perfect-scrollbar": "^1.4.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "styled-components": "^3.3.2",
    "xterm": "^3.4.1"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "concurrently": "^3.5.1",
    "cross-env": "^5.2.0",
    "devtron": "^1.4.0",
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "react-app-rewired": "^1.5.2",
    "react-scripts": "^1.1.4",
    "wait-on": "^2.1.0"
  },
  "build": {
    "productName": "Proger",
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "mac": {
      "icon": "icons/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons/icon.png"
    },
    "extraMetadata": {
      "main": "build/index.js"
    },
    "directories": {
      "buildResources": "assets"
    }
  },
  "homepage": "./"
}
